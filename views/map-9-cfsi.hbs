<!DOCTYPE html>
<html>

<head>
<meta charset='utf-8' />
<title>Map test with CFSI</title>
<meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
<script src='./mapbox-gl.js'></script>
<link href='./mapbox-gl_r.css' rel='stylesheet' />

<style>
body { margin:0; padding:0; }
#map {
  position: absolute;
  top: 10%;
  bottom: 0;
  width: 100%;
}
</style>
</head>

<body>
Test Map  (<a href="../">go back to home</a>). 
https://cfsi-wms-demo.gispocoding.fi/wms?bbox={bbox-epsg-3857}&format=image/png&service=WMS&version=1.1.1&request=GetMap&srs=EPSG:3857&transparent=true&width=256&height=256&layers=cloudless_mosaic
<div id='map'"></div>

<script>
var map = new mapboxgl.Map({
  container: 'map', 
  attributionControl: false,
  hash: true, 
  style: './cfsi-wms-teststyle.json', // style file path
  center: [31.4,4.92], // center [lng, lat]
  zoom: 5, // zoom level at loading
  maxZoom: 0, // min zoom
  maxZoom: 17 // max zoom
});


//UI
map.addControl(new mapboxgl.AttributionControl({customAttribution: "<a href='https://geoportal.dfs.un.org/arcgis/apps/sites/#/unitemaps'><img src='https://geoportal.dfs.un.org/webapps/resources/LOGOS/PoweredbyUniteMaps.png' alt='Powered by Unite Maps'></a> <a href='http://unopengis.org/unopengis/main/main.php'><img src='https://unopengis.github.io/watermark/watermark.png' alt='UN OpenGIS' style='width:40px;height:40px;'></a>" }));
map.addControl(new mapboxgl.NavigationControl(), 'bottom-right');
map.addControl(new mapboxgl.ScaleControl() );


//debug
map.showTileBoundaries = false;
map.showCollisionBoxes = false;

</script>
</body>
</html>